<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fbf7ed"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:orientation="horizontal"
        android:paddingLeft="7dip"
        android:paddingRight="7dip"
        android:paddingBottom="7dip"
        android:paddingTop="7dip"
        android:id="@+id/send_form"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"


            >

            <ImageView
                android:id="@+id/frame_tx_record"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:scaleType="centerCrop"

                android:layout_gravity="center"
                android:background="@drawable/object_frame_3x1_filled"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|end" >
                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#FF666666"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:hint="New contact name"
                    android:gravity="center"
                    android:paddingLeft="7dip"
                    android:paddingRight="7dip"
                    android:paddingTop="3dip"
                    android:paddingBottom="3dip"
                    android:layout_alignParentBottom="true"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="7dip" >



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dip"
        android:paddingRight="7dip">
        <EditText
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textColor="#FF666666"
            android:textSize="20sp"
            android:textStyle="normal"
            android:hint="Notes"
            android:paddingTop="7dip"
            android:paddingLeft="14dip"
            android:paddingRight="14dip"
            android:paddingBottom="7dip"
            android:layout_gravity="end" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dip"
        >
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_spinner"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:entries="@array/share_options"
             />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dip"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qr_code"
            android:src="@drawable/qr_code"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </LinearLayout>
</LinearLayout>